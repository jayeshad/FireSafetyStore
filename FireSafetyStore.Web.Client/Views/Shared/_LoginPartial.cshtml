@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
    {
        @Html.AntiForgeryToken()
        <ul class="nav justify-content-end">
            <li class="nav-item">
                @Html.ActionLink("Welcome " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @class = "nav-link disabled" })
            </li>

            <li class="nav-item">
                <a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">Log Out</a>
            </li>
            @if (!Request.IsAuthenticated && User.IsInRole("Customer") || Request.IsAuthenticated && User.IsInRole("Customer"))
            {
                <li class="nav-item">
                    <button type="button" class="btn btn-primary">
                        Shopping Cart <span class="badge badge-light">0</span>
                    </button>
                </li>
            }
        </ul>
    }
}
else
{
    <ul class="nav justify-content-end">
        <li class="nav-item">
            @Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "nav-link" })
        </li>
        <li class="nav-item">
            @Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link" })
        </li>
    </ul>
}
