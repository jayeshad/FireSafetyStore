<body>
    
    <header>
        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
            @Html.ActionLink("FireSAFE", "Index", "Home", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav mr-auto">
                    @if (!Request.IsAuthenticated)
                    {
                        <li class="nav-item active">@Html.ActionLink("Home", "Index", "Home", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("About", "About", "Home", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Contact", "Contact", "Home", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link" })</li>                        
                    }
                    @if (Request.IsAuthenticated && User.IsInRole("Customer"))
                    {
                        <li class="nav-item active">@Html.ActionLink("Home", "Index", "Home", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("About", "About", "Home", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Contact", "Contact", "Home", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link" })</li>

                        <li class="nav-item active">
                            <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item dropdown">
                            <div class="dropdown show">
                                <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Shop by category
                                </a>

                                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                    <a class="dropdown-item" href="#">Extinguishers & Equipment</a>
                                    <a class="dropdown-item" href="#">Smoke, Fire & Gas Detection</a>
                                    <a class="dropdown-item" href="#">Fire Doors & Accessories</a>
                                </div>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <div class="dropdown show">
                                <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Shop by brand
                                </a>

                                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                    <a class="dropdown-item" href="#">Fire Angel</a>
                                    <a class="dropdown-item" href="#">First Alert</a>
                                    <a class="dropdown-item" href="#">Geo Fire</a>
                                </div>
                            </div>
                        </li>
                    }

                    @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="administrationMenu" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Website Administration
                            </a>
                            <div class="dropdown-menu" aria-labelledby="administrationMenu">
                                @Html.ActionLink("Manage Roles", "Index", "RolesAdmin", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "dropdown-item" })
                                @Html.ActionLink("Manage Employees", "Index", "Employee", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "dropdown-item" })
                                @Html.ActionLink("Manage Customers", "Index", "Customer", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "dropdown-item" })
                                @Html.ActionLink("Manage Units", "Index", "UnitMaster", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "dropdown-item" })
                                @Html.ActionLink("Manage Categories", "Index", "Categories", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "dropdown-item" })
                                @Html.ActionLink("Manage Brands", "Index", "Brands", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "dropdown-item" })
                                @Html.ActionLink("Manage Products", "Index", "Products", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "dropdown-item" })
                            </div>
                        </li>


                            @*<li class="nav-item active">@Html.ActionLink("Home", "Index", "Home", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link" })</li>
                            <li class="nav-item active">@Html.ActionLink("Roles", "Index", "RolesAdmin", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link" })</li>
                            <li class="nav-item active">@Html.ActionLink("Employees", "Index", "Employee", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link" })</li>
                            <li class="nav-item active">@Html.ActionLink("Customers", "Index", "Customer", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link" })</li>
                            <li class="nav-item active">@Html.ActionLink("Unit", "Index", "UnitMaster", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link" })</li>
                            <li class="nav-item active">@Html.ActionLink("Categories", "Index", "Categories", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link" })</li>
                            <li class="nav-item active">@Html.ActionLink("Brands", "Index", "Brands", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link" })</li>
                            <li class="nav-item active">@Html.ActionLink("Products", "Index", "Products", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link" })</li>*@
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </nav>
    </header>


