    <main role="main">
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; Copyright @DateTime.Now.Year - Firesafe Online Store, All Rights Reserved.</p>
            </footer>
        </div>
    </main>
    
    @Scripts.Render("~/bundles/popper")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
