@model FireSafetyStore.Web.Client.Models.ShoppingCartViewModel
@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts {
    <link href="~/Content/Cart.css" rel="stylesheet" />
}


<h5>Order Summary</h5>
<hr />
@if (Model.ShoppingCartItems.Any())
{
    <table style="width:100%">
        <tr>
            <th style="text-align:left">Item Name</th>
            <th style="text-align:left">Quantity</th>
            <th style="text-align:left">Rate</th>
            <th style="text-align:left">Total</th>
            <th style="text-align:left"></th>
        </tr>

        @foreach (var item in Model.ShoppingCartItems)
        {
            <tr>
                <td style="text-align:left">@Html.DisplayFor(modelItem=> item.ProductName)</td>
                <td style="text-align:left">
                @Html.TextBoxFor(modelItem => item.Quantity, new { htmlAttributes = new { @class = "qty-tbx" } }) </td>
                <td style="text-align:left">@Html.DisplayFor(modelItem => item.Rate)</td>
                <td style="text-align:left">@Html.DisplayFor(modelItem => item.Total)</td>
                <td style="text-align:left">@Html.ActionLink("X", "RemoveFromCart", "Shopping", new { id = item.ProductId }, htmlAttributes: new { @class = "glyphicon glyphicon-remove" })</td>
            </tr>
        }
    </table>
    <hr />

    @Html.ActionLink("Proceed To Payment", "Payment", "Shopping", null, htmlAttributes: new { @class = "btn btn-primary" })
}
else
{
    <div class="alert alert-info" role="alert">
        Your shopping cart is empty
    </div>
}

