@model FireSafetyStore.Web.Client.Models.ShoppingCartViewModel
@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h5>Order Summary</h5>
<hr />
@if (Model.ShoppingCartItems.Any())
{
    <table>
        <tr>
            <th>Item Name</th>
            <th>Description</th>
            <th>Quantity</th>
            <th>Rate</th>
            <th>Total</th>
            <th></th>
        </tr>

        @foreach (var item in Model.ShoppingCartItems)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.Description</td>
                <td>@item.Quantity</td>
                <td>@item.Rate</td>
                <td>@item.Total</td>
                <td>@Html.ActionLink("X", "RemoveFromCart", "Shopping", new { id = item.ProductId }, htmlAttributes: new { @class = "glyphicon glyphicon-remove" })</td>
            </tr>
        }
    </table>
    <hr />

    @Html.ActionLink("Proceed To Payment", "Payment", "Shopping", null, htmlAttributes: new { @class = "btn btn-default" })
}
else
{
    <div class="alert alert-info" role="alert">
        Your shopping cart is empty
    </div>
}

