@model IEnumerable<FireSafetyStore.Web.Client.Infrastructure.DbContext.OrderMaster>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Manage All Orders</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrderCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerFullName)
        </th>        
        <th>
            @Html.DisplayNameFor(model => model.CustomerContactNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactEmail)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OrderCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderDate, "ShortDateTime")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerFullName)
        </td>        
        <td>
            @Html.DisplayFor(modelItem => item.CustomerContactNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContactEmail)
        </td>
        <td>
            @Html.ActionLink("Modify", "ProcessOrder", new { id=item.OrderId }) 
        </td>
    </tr>
}

</table>
