@using (Html.BeginForm("_UploadFile", "Products", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
    @Html.Label("Image", htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.TextBox("file", "", new { type = "file", htmlAttributes = new { @class = "form-control" } })
        <input type="submit" value="Upload" />
    </div>
}
