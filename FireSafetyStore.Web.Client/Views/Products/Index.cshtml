@model IEnumerable<FireSafetyStore.Web.Client.Infrastructure.DbContext.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Manage all Products</h2>
<hr />
<p>
    @Html.ActionLink("Create New", "Create") | 
    @Html.ActionLink("Stock Report", "Index", "Report", routeValues: new { type = "stock", id = "" }, htmlAttributes: new { id = "loginLink" })
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th style="width:25%">
                @Html.DisplayNameFor(model => model.ItemName)
            </th>
            <th style="width:45%">
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rate)
            </th>

            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tbody>
            <tr>
                <td style="width:25%">
                    @Html.DisplayFor(modelItem => item.ItemName)
                </td>
                <td style="width:45%">
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rate)
                </td>

                <td>
                    @Html.ActionLink("Modify", "Edit", new { id = item.ItemId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ItemId })
                </td>
            </tr>
        </tbody>
    }

</table>
